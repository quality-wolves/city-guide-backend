%h3.page-title
  = Hotspot.category_title(params[:category])
  %a{:style=>'float: right;',:class => 'btn primary blue left',:href => hotspots_new_path(params[:category])}= 'Add'
.row.mix-grid.hotspots
  - @hotspots.each do |hotspot|
    .col-md-3.col-sm-4.mix.mix_all.category_1{:style => 'margin: 10px; position: relative;'}
      = link_to hotspot_path(hotspot) do
        %span{style:'position:absolute;color:white;font-size:24px;left:30px;top:10px;text-shadow:1px 1px 2px black;'}
          = hotspot.name
        -if hotspot.is_primary
          %span{style:'position: absolute;color:white;right:-20px;top:20px;text-shadow:1px 1px 2px black;'}
            %i.fa.fa-check{style:'font-size: 40px;'}
        = image_tag hotspot.hotspot_images[0].file.url(:medium).gsub(/^\w+/, '') if hotspot.hotspot_images.any?
      %p{style:'width: 275px;margin: 0;height: 75px;'}
        = hotspot.tagline
