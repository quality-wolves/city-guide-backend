<h1>New Hotspots</h1>
<%= form_for :hotspot, :html => { :multipart => true }, url: hotspots_path do |f| %>
  
  <% if @hotspot.errors.any? %>
    <div id="error_explanation">
      <h4>
        <%= pluralize(@hotspot.errors.count, "error") %> prohibited
        this hotspot from being saved:
      </h4>
      <ul>
        <% @hotspot.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p> 
    <%= f.label :image %><br>
    <%= f.file_field :image%> 
  </p>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control input-medium' %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </p>
  <p>
    <label>Address</label><br/>
    <input
      class="md-autocomplete-location form-control"
      data-components='{"latSelector":"[role=\"lat\"]","lngSelector":"[role=\"lng\"]"}'
      type="text"
      maxlength="512"
      autocomplete="off"/>
      <%= f.hidden_field :lat, role: 'lat'%>
      <%= f.hidden_field :lng, role: 'lng'%>
  </p>
 
  <p>
    <%= f.submit :class => 'btn btn-primary' %>
  </p>

<% end %>
<%= link_to 'Back', hotspots_path, class: 'link' %>