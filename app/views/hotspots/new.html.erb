<h1>New Hotspots</h1>
<%= form_for :hotspot, :html => { :multipart => true }, url: hotspots_path do |f| %>
  
  <% if @hotspot.errors.any? %>
    <div id="error_explanation">
      <h4>
        <%= pluralize(@hotspot.errors.count, "error") %> prohibited
        this hotspot from being saved:
      </h4>
      <ul>
        <% @hotspot.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p> 
    <%= f.label :image %><br>
    <%= f.file_field :image %> 
  </p>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :lat %><br>
    <%= f.number_field :lat, :step => 'any' %>
  </p>

  <p>
    <%= f.label :lng %><br>
    <%= f.number_field :lng, :step => 'any' %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>

<% end %>
<%= link_to 'Back', hotspots_path %>