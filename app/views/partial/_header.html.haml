.page-header.navbar.navbar-fixed-top
  .page-header-inner.container
    .page-logo
      = link_to '/' do
        .logo-default{:style => 'text-decoration: none; color: white;font-size: 18px;margin: 0;line-height: 65px;'}= 'CITYGUIDE'
      .menu-toggler.sidebar-toggler
        = image_tag 'sidebar-toggler.png'
      %a{:href => ';javascript', :class => 'menu-toggler responsive-toggler', :data => {:toggle => 'collapse', :target => '.navbar-collapse'}}
    .page-actions
      .btn-group
        %button.btn.btn-circle.green-haze.dropdown-toggle{:type => 'button', :data => {:toggle => 'dropdown'}, :aria => {:expanded => 'true'}}
          %i.fa.fa-plus
          %span.hidden-sm.hidden-xs= 'New Hotspot'
          %i.fa.fa-angle-down
        %ul.dropdown-menu{:role => 'menu'}
          - for @category in Hotspot.categories
            %li
              = link_to hotspots_new_path(:category => @category) do
                %i{:class => Hotspot.category_icon_class(@category)}
                = @category.capitalize
      .btn-group
        %button.btn.btn-circle.green-haze.dropdown-toggle{:type => 'button', :data => {:toggle => 'dropdown'}, :aria => {:expanded => 'true'}}
          =link_to new_whats_on_path, :class => '.btn.btn-circle.green-haze.dropdown-toggle', :style=>'color: white;text-decoration: none!important;' do
            %i.fa.fa-plus
            %span.hidden-sm.hidden-xs= 'What`s on'
    .page-top{:style => 'background: white; width: 100%;'}