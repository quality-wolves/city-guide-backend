.page-sidebar-wrapper
  .page-sidebar.navbar-collapse.collapse
    %ul.page-sidebar-menu.page-sidebar-menu-hover-submenu{:data => {:keep => {:expanding => 'false'}, :auto => {:scroll => 'true'}, :slide => {:speed => '200'}}}
      %li.start{:class => ('active' unless request.path != root_path)}
        = link_to root_path do
          %i.icon-home
          %span.title= 'Dashboard'
      - for @category in Hotspot.categories do
        %li{:class => ('active' unless params[:category] != @category)}
          = link_to list_hotspots_path(:category => @category) do
            %i{:class => Hotspot.category_icon_class(@category)}
            %span.title= @category.capitalize
      %li{:class => ('active' unless params[:controller] != 'whats_ons')}
        = link_to whats_ons_path do
          %i.icon-eye
          %span.title= 'What`s on'
